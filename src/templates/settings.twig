{% import "_includes/forms" as forms %}

{% do view.registerAssetBundle("malven\\imgix\\assetbundles\\imgix\\ImgixAsset") %}

{{ forms.textField({
    label: 'Imgix API Key',
    instructions: 'Your Imgix API key.',
    id: 'imgixApiKey',
    name: 'imgixApiKey',
    required: true,
    value: settings['imgixApiKey']})
}}

{{ forms.textField({
    label: 'Imgix Source Domain',
    instructions: 'The domain for your Imgix source.',
    id: 'sourceDomain',
    name: 'sourceDomain',
    placeholder: 'custom.imgix.net',
    required: true,
    value: settings['sourceDomain']})
}}

{{ forms.textField({
    label: 'Imgix Security Token',
    instructions: 'If you have `Secure URL` enabled for your Imgix source, this should be the `Security Token` value listed there.',
    id: 'securityToken',
    name: 'securityToken',
    value: settings['securityToken']})
}}